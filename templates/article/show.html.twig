{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{  article.category.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.author.email }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

    <a href="{{ path('blog_index') }}">back to list</a>
    {% if is_granted('ROLE_AUTHOR') %}
        <a href="{{ path('article_edit', { 'id': article.id} ) }}">Ã‰diter</a>
        {{ include('article/_delete_form.html.twig') }}
    {%endif%}


{% endblock %}
